const Discord = require('discord.js');
const base_stats = require('../static/base_stats.json');

module.exports = function(p, possible_cps) {

  let pvpString = "";

  for(var pokemon in possible_cps)
  {
    pvpString += base_stats[pokemon].name+" Level "+possible_cps[pokemon].level+" CP "+possible_cps[pokemon].cp
                +" \n Rank: "+possible_cps[pokemon].rank+"("+possible_cps[pokemon].percent+"%)\n";
  }

  let pokemon_embed = new Discord.RichEmbed()
  .setColor(p.color)
  .setThumbnail(p.sprite)
  .addField('**'+p.name+'** '+p.form+p.attack+'/'+p.defense+'/'+p.stamina+' ('+p.iv+'%)\n'
           +'Level '+level+' | CP '+p.cp+p.gender, 'Ht: '+p.height+'m | Wt: '+p.weight+'kg | '+p.size+'\n'
           +p.move_name_1+' '+p.move_type_1+' / '+p.move_name_2+' '+p.move_type_2, false)
  .addField(p.verified+'| '+p.time+' (*'+p.mins+'m '+p.secs+'s*) ', p.type+p.weather_boost, false)
  .addField("**Potential PvP CPs**", pvpString, false)
  .addField(area+' | Directions:','[Google Maps](https://www.google.com/maps?q='+p.lat+','+p.lon+') | '
  +'[Apple Maps](http://maps.apple.com/maps?daddr='+p.lat+','+p.lon+'&z=10&t=s&dirflg=d) | '
  +'[Scan Map]('+p.map_url+'?lat='+p.lat+'&lon='+p.lon+'&zoom=15)',false)
  .setImage(p.map_img);

  return pokemon_embed;
}
